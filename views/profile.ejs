<%- include('partials/header') -%>
    <% if(!visitor) { %>
    <h1 class="text-center my-name"><%= userName + "'s Profile" %> </h1> 
    <h2 class="text-center"><em> My Blogs </em></h1>
    <% } else { %> 
    <h2 class="text-center"><em><%= "@" + userName + "'s Blogs"%></em></h1>
    <% } %> 
    <% newPost.forEach(function(post){ %>
        <div class="card post-box">
            <div class="card-body">
                <h2 class="card-title post-title"> <a class="post-title" href="/posts/<%=post._id%> ">
                        <%= post.title %>
                    </a></h2>
                <p class="card-text post-para">
                    <%= post.content.substring(0,200) + "..." %>
                </p>
                <a class="btn read-more rm-btn" href="/posts/<%=post._id%> " role="button">Read more</a>
            </div>
        </div>
        <% }) %>

<%- include('partials/footer') -%>